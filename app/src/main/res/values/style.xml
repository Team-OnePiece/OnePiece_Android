<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="account_img_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/account_arrow_back</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>
    <style name="account_text_account">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">회원가입</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/orbit</item>
        <item name="android:layout_marginTop">-4dp</item>
    </style>
    <style name="account_img_step">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.9</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>
    <style name="account_btn_next">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_constraintWidth_percent">0.89</item>
        <item name="android:background">@drawable/btn_radius</item>
        <item name="android:backgroundTint">@color/main_color1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_000</item>
        <item name="android:fontFamily">@font/orbit</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="account_edit_pw">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_constraintWidth_percent">0.9</item>
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/orbit</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="btn_edit_pw_eye">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
    <style name="account_student_edit_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_constraintWidth_percent">0.28</item>
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/orbit</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="account_btn_check">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_constraintWidth_percent">0.23</item>
        <item name="android:background">@drawable/btn_radius</item>
        <item name="android:backgroundTint">@color/main_color1</item>
        <item name="android:text">중복확인</item>
        <item name="android:textColor">@color/gray_000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/orbit</item>

    </style>
</resources>